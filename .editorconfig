root = true

[*]
insert_final_newline = true

[*.{kt,kts}]
charset = utf-8
indent_style = space
indent_size = 4
tab_width = 4
max_line_length = 120
trim_trailing_whitespace = true

[*.json]
indent_style = space
indent_size = 2

[*.{yaml,yml}]
indent_style = space
indent_size = 2
tab_width = 2
max_line_length = 120
trim_trailing_whitespace = true
